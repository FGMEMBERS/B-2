<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">

<PropertyList>

	<name>glas_3 hotspots</name>
	<background>Aircraft/B-2/Models/transparent.rgb</background>
	<x>0</x>
	<y>0</y>
	<w>300</w>
	<h>150</h>
	<y-offset>0</y-offset>
	<instruments>
		<instrument>
			<x>0</x>
			<y>0</y>
			<w>300</w>
			<h>150</h>
			<w-base>300</w-base>
			<h-base>150</h-base>
			<layers>
				<!--<layer>
					<name>background</name>
					<texture>
						<path>Aircraft/B-2/Models/transparent.rgb</path>
						<x1>0.0</x1>
						<y1>0.0</y1>
						<x2>1.0</x2>
						<y2>1.0</y2>
					</texture>
				</layer>-->
			</layers>


			<actions>
				<!-- switch syst on -->
				<action>
					<button>0</button>
					<x>-50</x>
					<y>0</y>
					<w>50</w>
					<h>50</h>
					
					<binding>
						<command>nasal</command>
						<script>controls.syst3(1)</script>
					</binding>
				</action>

				<!-- switch aplt on -->
				<action>
					<button>0</button>
					<x>0</x>
					<y>0</y>
					<w>50</w>
					<h>50</h>

					<binding>
						<command>nasal</command>
						<script>controls.aplt(1)</script>
					</binding>
				</action>
				<!-- switch fuel on -->
				<action>
					<button>0</button>
					<x>50</x>
					<y>0</y>
					<w>50</w>
					<h>50</h>
					<binding>
						<command>nasal</command>
						<script>controls.fuel3(1)</script>
					</binding>
				</action>
				<!-- switch wpns on -->
				<action>
					<button>0</button>
					<x>100</x>
					<y>0</y>
					<w>50</w>
					<h>50</h>
					<binding>
						<command>nasal</command>
						<script>controls.wpns(1)</script>
					</binding>
				</action>

			</actions>

		</instrument>
	</instruments>

</PropertyList>

